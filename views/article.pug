extends layout
block content
    h1 #{article.title}
    .well=article.body
    small Written by: #{auther}
    hr
    if user
        if user.id == article.auther
            a.btn.btn-default(href="/articles/edit/"+article._id) Edit
            a.btn.btn-danger.delete-article(href="#", data-id=article._id) Delete
        
    